{
  "name": "crosswithfriends",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "server",
    "frontend",
    "shared"
  ],
  "engines": {
    "node": "^22.0.0"
  },
  "dependencies": {
    "firebase-admin": "^13.6.0"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.6.2",
    "turbo": "^2.6.1"
  },
  "scripts": {
    "dev": "concurrently -n \"frontend,backend\" -c \"cyan,magenta\" \"yarn devfrontend\" \"yarn devbackend\"",
    "devfrontend": "turbo run dev:local --filter=@crosswithfriends/frontend",
    "devfrontendprod": "turbo run dev:prod --filter=@crosswithfriends/frontend",
    "devbackend": "turbo run dev --filter=@crosswithfriends/server",
    "devbackendprod": "turbo run dev:prod --filter=@crosswithfriends/server",
    "servebackendprod": "yarn workspace @crosswithfriends/server serve:prod",
    "servebackendstaging": "yarn workspace @crosswithfriends/server serve:staging",
    "build": "turbo run build",
    "build:frontend": "turbo run build --filter=@crosswithfriends/frontend",
    "build:backend": "turbo run build --filter=@crosswithfriends/server",
    "build:shared": "turbo run build --filter=@crosswithfriends/shared",
    "start:backend": "yarn workspace @crosswithfriends/server start",
    "test": "turbo run test",
    "test:backend": "turbo run test --filter=@crosswithfriends/server",
    "test:backend:watch": "yarn workspace @crosswithfriends/server test:watch",
    "test:backend:coverage": "yarn workspace @crosswithfriends/server test:coverage",
    "lint": "yarn workspace @crosswithfriends/frontend lint && yarn workspace @crosswithfriends/server lint",
    "lint:fix": "yarn workspace @crosswithfriends/frontend lint:fix && yarn workspace @crosswithfriends/server lint:fix",
    "lint:frontend": "yarn workspace @crosswithfriends/frontend lint",
    "lint:backend": "yarn workspace @crosswithfriends/server lint",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,css,md}\""
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "packageManager": "yarn@4.12.0"
}
