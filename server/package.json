{
  "name": "@crosswithfriends/server",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "server.ts",
  "scripts": {
    "dev": "cross-env PORT=3021 npx tsx watch server.ts",
    "dev:prod": "source ../../.env.prod; PORT=3021 nodemon --watch . -e \"ts\" --exec \"npx ts-node -P tsconfig.json server.ts\"",
    "serve:prod": "while true; do env $(cat ../../.env.prod | xargs) NODE_ENV=production PORT=3021 ts-node -P tsconfig.json server.ts || true; done",
    "serve:staging": "while true; do env $(cat ../../.env.staging | xargs) NODE_ENV=production PORT=4021 ts-node -P tsconfig.json server.ts || true; done",
    "build": "tsc -p tsconfig.json && tsc-alias -p tsconfig.json",
    "start": "tsx server.ts",
    "test": "vitest run --config vitest.config.ts",
    "test:watch": "vitest --config vitest.config.ts",
    "test:coverage": "vitest run --coverage --config vitest.config.ts",
    "lint": "eslint . --ext .ts,.js",
    "lint:fix": "eslint . --ext .ts,.js --fix",
    "format": "prettier --write \"**/*.{js,ts,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,ts,json,md}\""
  },
  "dependencies": {
    "@crosswithfriends/shared": "workspace:*",
    "@fastify/cors": "^11.1.0",
    "fastify": "^5.6.2",
    "joi": "^18.0.1",
    "lodash": "^4.17.21",
    "pg": "^8.16.3",
    "socket.io": "^4.8.1",
    "tsx": "^4.19.2",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@tsconfig/node20": "^20.1.6",
    "@types/lodash": "^4.17.20",
    "@types/node": "^24.10.0",
    "@types/pg": "^8.15.6",
    "@types/uuid": "^11.0.0",
    "@typescript-eslint/eslint-plugin": "^8.46.4",
    "@typescript-eslint/parser": "^8.46.4",
    "@vitest/coverage-v8": "^4.0.8",
    "cross-env": "^10.1.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.10",
    "typescript": "^5.9.3",
    "vitest": "^4.0.8"
  }
}
