{
  "name": "@crosswithfriends/shared",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc && fix-esm-import-path dist",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage"
  },
  "devDependencies": {
    "@vitest/ui": "^4.0.10",
    "fix-esm-import-path": "^1.10.3",
    "jsdom": "^25.0.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.10"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./types": {
      "types": "./dist/shared/types.d.ts",
      "default": "./dist/shared/types.js"
    },
    "./roomEvents": {
      "types": "./dist/shared/roomEvents.d.ts",
      "default": "./dist/shared/roomEvents.js"
    },
    "./fencingGameEvents/*": {
      "types": "./dist/shared/fencingGameEvents/*.d.ts",
      "default": "./dist/shared/fencingGameEvents/*.js"
    },
    "./lib/*": {
      "types": "./dist/lib/*.d.ts",
      "default": "./dist/lib/*.js"
    }
  }
}
